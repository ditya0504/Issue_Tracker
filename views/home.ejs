<head>
  <style>
    .card {
      background-color: rgb(91, 87, 11);
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% for( let project of projects ) { %>
      <div class="card mb-2 w-5 m-auto text-light">
        <div class="card">
          <strong> Name of the project : </strong>
          <%= project.name %>
        </div>
        <div class="card-body text-light">
          <h6 class="card-subtitle mb-2 text-light">
            <strong> Author : </strong>
            <%= project.author %>
          </h6>
          <p class="card-text">
            <strong> Description : </strong>
            <%= project.description %>
          </p>

          <div class="m-auto text-end">
            <a href="/project/<%=project._id%>" class="btn btn-danger m-auto">Open project</a>
          </div>
        </div>
      </div>
      <% } %>
  </div>
</body>